<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="竞答"
        android:textColor="@color/gray6"
        android:gravity="center"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2018"
        android:textColor="@color/gray9"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textColor="#EE7708"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="正确率："
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pecrcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0%"
            android:textColor="#EE7708"
            android:textSize="16sp"
            android:layout_marginRight="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="15dp"
            android:background="@color/graye" />

        <TextView
            android:id="@+id/total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总分： 1"
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总题： 1"
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/wrong_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错题： 1"
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/right_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正题： 1"
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/test_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="3dp"
            android:textSize="14sp"
            android:text="再测一次"
            android:gravity="center"
            android:background="@drawable/shape_red2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"/>
    </RelativeLayout>

</LinearLayout>