<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/graye"
    tools:context="com.fw.dangjian.view.ActionFragment">

    <include
        layout="@layout/head_title"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/menu_select"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/menu_select"
        app:tabTextAppearance="@style/QuestionTextAppearance"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
