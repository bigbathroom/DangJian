<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayf6"
    android:orientation="vertical"
    tools:context="com.fw.dangjian.view.ScoreActivity">

    <include layout="@layout/head_title"></include>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="题目"
        android:textSize="16sp"
        android:textColor="@color/red_score"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_gray"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合"
            android:textColor="@color/red_score"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:text="正确率："
            android:textColor="@color/gray3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pecrcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0%"
            android:textColor="@color/red_score"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="15dp"
            android:background="@color/graye" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总分："
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@color/red_score"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总题："
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="65dp"/>
        <TextView
            android:id="@+id/total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@color/red_score"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="错题："
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="90dp"/>
        <TextView
            android:id="@+id/wrong_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@color/red_score"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正题："
            android:textSize="15sp"
            android:textColor="@color/gray3"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="115dp"/>
        <TextView
            android:id="@+id/right_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            android:textColor="@color/red_score"
            android:layout_below="@+id/pecrcent"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:id="@+id/test_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_red2"
            android:text="再测一次"
            android:textSize="14sp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"/>
    </RelativeLayout>


</LinearLayout>
