<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_login"
    tools:context="com.fw.dangjian.view.ResetPswActivity">

    <include
        layout="@layout/head_title"></include>

    <EditText
        android:id="@+id/et_old_psw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/shape_edit"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="原密码（6~12位字母或数字）"
        android:textSize="15sp"
        android:textColor="@color/redf0"
        android:textColorHint="@color/toolbar"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:inputType="textPassword"
        android:maxLines="1"/>
    <EditText
        android:id="@+id/et_again_psw"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edit"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="新密码（6~12位字母或数字）"
        android:textSize="15sp"
        android:textColor="@color/redf0"
        android:textColorHint="@color/toolbar"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="@color/white"
        android:text="确定"
        android:background="@drawable/shape_sure"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        />
</LinearLayout>
