<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.fw.dangjian.view.WorkInfoActivity">
    <include
        layout="@layout/head_title"></include>

    <TextView
        android:id="@+id/tv_total_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray3"
        android:textSize="16sp"
        android:text="中央军委首次举行运动会"
        android:gravity="center"
        android:layout_marginTop="65dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/tv_total_title"
        android:visibility="gone"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rv_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/head_portrait"
            app:riv_border_color="@color/graye"
            app:riv_border_width="1dip"
            app:riv_oval="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新华网"
            android:textSize="12sp"
            android:textColor="@color/gray9"
            android:layout_toRightOf="@id/rv_touxiang"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-01-04"
            android:textSize="12sp"
            android:textColor="@color/gray9"
            android:layout_toRightOf="@id/rv_touxiang"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_care"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="+关注"
            android:background="@drawable/bt_blue1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"></WebView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        ></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/graye"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@mipmap/compile"
               />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="写评论..."
                android:layout_alignParentBottom="true"
                android:textColor="@color/gray9"
                android:layout_marginLeft="50dp"
                android:textSize="12sp"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <ImageView
                android:id="@+id/iv_commment"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/comment"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@mipmap/collect"
                android:layout_toRightOf="@+id/iv_commment"
                android:layout_marginLeft="15dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_praise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@mipmap/praise"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@mipmap/share"
                android:layout_toRightOf="@+id/iv_praise"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
