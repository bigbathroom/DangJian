<?xml version="1.0" encoding="utf-8"?>
<com.fw.dangjian.util.KeyboardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    android:id="@+id/main_ll"
    tools:context="com.fw.dangjian.view.ForgetPwdActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/head_title"></include>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/shape_edit"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="手机号"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="15sp"
            android:textColor="@color/redf0"
            android:textColorHint="@color/toolbar"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:inputType="number"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_edit"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:paddingRight="10dp">
            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
               android:background="@null"
                android:hint="验证码"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textSize="16sp"
                android:textColor="@color/redf0"
                android:textColorHint="@color/toolbar"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:inputType="number"/>
            <Button
                android:id="@+id/btn_getcode"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:text="获取验证码"
                android:textSize="15sp"
                android:textColor="#A78664"
                />
        </LinearLayout>


        <EditText
            android:id="@+id/et_psw"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edit"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:hint="新密码（6~12位字母或数字)"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="15sp"
            android:textColor="@color/redf0"
            android:textColorHint="@color/toolbar"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:text="确定"
            android:background="@drawable/shape_sure"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>
</com.fw.dangjian.util.KeyboardLayout>
