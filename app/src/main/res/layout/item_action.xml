<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grayf6">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayf6"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="中共中央总书记、国家主席、中央军委主席习近平向全军发布训令"
                android:textColor="@color/gray3"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_red1"
                android:text="再测一次"
                android:padding="3dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@color/redf0"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/tv_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甘肃省白银市"
                android:textColor="@color/gray9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_organization"
                android:layout_marginLeft="10dp"
                android:text="马宝晶"
                android:textColor="@color/gray9"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学时：5分钟"
                android:textColor="@color/gray9"
                android:textSize="12sp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>