<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:background="@drawable/shape_gray_solid">

        <CheckBox
            android:id="@+id/cb_single"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/select_check"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:button="@null"
            android:visibility="gone"
            />


        <RelativeLayout
            android:id="@+id/rl_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cb_single"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="中国共产党章程党章党规学习解读"
                android:textColor="@color/red_score"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读"
                android:textColor="@color/red_score"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title1"
                android:layout_marginTop="10dp"
                android:text="笔记内容："
                android:textColor="#777777"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv"
                android:layout_marginTop="2dp"
                android:text="        中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读中国共产党章程党章党规学习解读"
                android:textColor="#444444"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_content"
                android:layout_marginTop="10dp"
                android:text="2018-01-04"
                android:textColor="@color/gray9"
                android:textSize="12sp" />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/rl_note"/>
    </RelativeLayout>


</RelativeLayout>