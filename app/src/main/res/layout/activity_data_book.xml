<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/head_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/iv_book"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/booktitle" />

                <com.fw.dangjian.MyListView
                    android:id="@+id/recyclerview"
                    android:paddingTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/iv_book"
                    android:divider="@color/white"
                    android:background="@mipmap/book_bg"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_no_content"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_bg"
                    android:layout_marginTop="100dp"
                    android:layout_width="60dp"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/tv_kong"
                    android:text="当前内容为空"
                    android:textColor="@color/gray9"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>
